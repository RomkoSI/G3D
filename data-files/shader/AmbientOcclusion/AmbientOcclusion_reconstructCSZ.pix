#expect USE_PEELED_DEPTH_BUFFER "binary"

#if (USE_PEELED_DEPTH_BUFFER != 0)
    out vec2 result;
#else
    out float result;
#endif

uniform sampler2D DEPTH_AND_STENCIL_buffer;
uniform vec3 clipInfo;
#if (USE_PEELED_DEPTH_BUFFER != 0)
    uniform sampler2D peeledDepthBuffer;
#endif


void main() {
#   if (USE_PEELED_DEPTH_BUFFER != 0)
        result = vec2(  reconstructCSZ(texelFetch(DEPTH_AND_STENCIL_buffer, ivec2(gl_FragCoord.xy), 0).r, clipInfo),
                        reconstructCSZ(texelFetch(peeledDepthBuffer, ivec2(gl_FragCoord.xy), 0).r, clipInfo) );    
#   else
        result = reconstructCSZ(texelFetch(DEPTH_AND_STENCIL_buffer, ivec2(gl_FragCoord.xy), 0).r, clipInfo);        
#   endif

}
