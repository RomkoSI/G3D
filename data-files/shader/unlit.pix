#version 330 // -*- c++ -*-
/**
  \file unlit.pix

  Apply a color and texture.
  */
#include <compatibility.glsl>
#expect HAS_TEXTURE "1 or 0"

uniform vec4      color;
#if HAS_TEXTURE
    in vec2      texCoord;
    uniform sampler2D textureMap;
#endif

out vec4 result;

void main(void) {
    result =
#       if HAS_TEXTURE
            texture(textureMap, texCoord) * 
#       endif
        color;
}
