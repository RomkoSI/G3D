#version 330 // -*- c++ -*-
/**
  \file SlowMesh_render.pix

  Apply a color and texture.
  */

#expect HAS_TEXTURE "1 or 0"

in vec4         color;
out vec4        result;
#if HAS_TEXTURE
    in vec2             texCoord;
    uniform sampler2D   textureMap;
#endif

void main(void) {
    result = 
#       if HAS_TEXTURE
            texture2D(textureMap, texCoord) * 
#       endif
        color;
}
